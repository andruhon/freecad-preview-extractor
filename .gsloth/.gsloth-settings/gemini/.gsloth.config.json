{
  "llm": {
    "type": "google-genai",
    "model": "gemini-3-pro-preview",
    "location": "global"
  },
  "projectGuidelines": "AGENTS.md",
  "commands": {
    "code": {
      "filesystem": "all",
      "devTools": {
        "run_tests": "npm test",
        "run_single_test": "npm test -- ${testPath}"
      }
    }
  },
  "customTools": {
    "git_diff": {
      "command": "git --no-pager diff",
      "description": "View current diff with `git --no-pager diff`"
    },
    "integration_tests": {
      "command": "npm run test:integration",
      "description": "Run integration tests (needs FreeCAD installation)."
    },
    "integration_tests_no_freecad": {
      "command": "npm run test:integration-no-freecad",
      "description": "Run integration tests which don't need FreeCAD installation."
    }
  }
}
